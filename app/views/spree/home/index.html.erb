<% @body_id = 'home-page' %>
<% content_for :fullpage do %>
<section id="intro" class="main style1 dark fullscreen">
	<div class="content">
		<header>
			<h2>cute club</h2>
		</header>
		<p class="quark">ของน่ารักย่อมคู่ควรคนน่ารักๆ เช่นพวกเรา มาร่วมกันตามล่าหาของใช้น่ารักๆในชีวิตประจำวันไปด้วยกัน </br> ที่นี่ <strong> little honey club</strong></p>
		<footer>
			<a href="#promotion" class="button style2 down">More</a>
		</footer>
	</div>
</section>

<!-- Promotion -->
<section id="promotion" class="main style2 left dark fullscreen promo row">
	<div class="content box style2 col-xs-12 col-sm-6 col-md-6">
		<header>
			<h2>Promotion </h2>
			<h2>LED Make up Mirror </h2>
		</header>
		<p class="quark">โปรโมชั่นพิเศษ สำหรับสาวๆที่ยังไม่มีไอเท็มเสริม ช่วยให้การแต่งหน้าของคุณง่ายขึ้น กระจกแต่งหน้า LED ใช้แต่งหน้าได้เริศคมชัด สีไม่เพี้ยน หรือวางไว้เฉยๆเพิ่มความน่ารักให้ห้องของคุณก็เกร๋ไม่หยอก  จากราคา 1250บาท ลดเหลือ 1050 บาทเท่านั้น ด่วนจำนวนจำกัด เพียงใส่คูปองโค้ดนี้ <strong>LHCBeauty4You</strong> ในขั้นตอนชำระเงินค่ะ </p>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-6">
		<img src="/assets/images/promotion.jpg">
	</div>	
	<a href="#shop" class="button style1 down anchored">Next</a>
</section>
<!-- Shop -->
<section id="shop" class="main style3 primary">
	<div class="content">
		<header>
			<h2>Shop Now</h2>
			<p class="quark"></p>
		</header>
		<div data-hook="homepage_products">
			<% cache(cache_key_for_products) do %>
			<%= render partial: 'spree/shared/products', locals: { products: @products } %>
			<% end %>
		</div>
	</div>
</section>
<!-- Contact -->
<section id="contact" class="main style3 secondary">
	<div class="content">
		<header>
			<h2>Say Hello.</h2>
			<p class="quark">สนใจซื้อสินค้าไปใช้เอง หรือ ต้องการนำไปขายเพิ่มรายได้  ทางเรายินดีให้คำปรึกษา แนะนำสินค้าขายดี(ราคาส่ง) จัดเซ็ตพร้อมขาย โดยทีมงานออกแบบบู๊ทสินค้าระดับมืออาชีพ สร้างความประทับใจให้ลูกค้าได้แน่นอน <br/>ติดต่อพวกเราตามช่องทางที่สะดวกได้เลยค่ะ </p>
		</header>
		<%= render template: 'shared/social/call_btn'%>
		<%= render template: 'shared/social/facebook_btn'%>
		<%= render template: 'shared/social/line_btn'%>

		<div class="box">
		    <p style="text-align: left;">To: littlehoneyclub@gmail.com</p>
			<form method="post" action="#">
				<div class="field half first"><input type="text" name="name" placeholder="Name" /></div>
				<div class="field half"><input type="email" name="email" placeholder="Email" /></div>
				<div class="field"><textarea name="message" placeholder="Message" rows="6"></textarea></div>
				<ul class="actions">
					<li><input type="submit" value="Send Message" /></li>
				</ul>
			</form>
		</div>
	</div>
</section>

<% end %>

